<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drink_item"
    android:layout_marginVertical="12dp"
    android:layout_marginHorizontal="4dp"
    >

    <ImageView
        android:layout_margin="12dp"
        android:id="@+id/drinkImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/drink_image_not_load"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="drinkName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/drinkImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drinkPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0$"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/drinkImage"
        app:layout_constraintStart_toStartOf="@id/drinkImage"
        app:layout_constraintTop_toBottomOf="@id/drinkImage"
        android:paddingBottom="4dp"
        />

    <TextView
        android:id="@+id/drinkDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:maxLines="7"
        android:text="sadkljsalkdj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/drinkImage"
        app:layout_constraintTop_toBottomOf="@id/drinkName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>